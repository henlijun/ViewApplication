<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="295dp"
    android:layout_height="wrap_content"
    android:background="@drawable/coner_all_ten"
    android:paddingTop="20dp">

    <TextView
        android:id="@+id/titleDiaView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:text="TextView"
        android:textSize="18sp"
        android:textColor="#0D172C"
        android:gravity="center_horizontal"
        android:layout_marginBottom="14dp"/>

    <TextView
        android:id="@+id/subTitleDiaView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:text="TextViejwfeajfe"
        android:textSize="14sp"
        android:textColor="#2E3F64"
        android:gravity="center_horizontal"
        android:layout_marginBottom="20dp"/>

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#EBEDF3"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/sureDiaView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="TextView"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="#0D172C"/>
        <View
            android:id="@+id/centerDiaLine"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#EBEDF3"/>
        <TextView
            android:id="@+id/cancelDiaView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:visibility="visible"
            android:gravity="center"
            android:text="textView"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="#304EEC"/>
    </LinearLayout>

</LinearLayout>